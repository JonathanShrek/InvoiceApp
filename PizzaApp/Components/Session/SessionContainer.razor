@namespace PizzaApp.Components

@if (IsLoading)
{
    <Loading />
}
else
{
    <CascadingValue Value="CookieService" IsFixed>
        <CascadingValue Value="Snackbar" IsFixed>
            <CascadingValue Value="Theme" IsFixed>
                <CascadingValue Value="IsDarkMode">
                    @ChildContent
                </CascadingValue>
            </CascadingValue>
        </CascadingValue>
    </CascadingValue>
}