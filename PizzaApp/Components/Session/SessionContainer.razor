@namespace PizzaApp.Components

@if (IsLoading)
{
    <Loading />
}
else
{
    <MudThemeProvider @bind-IsDarkMode="ThemeService.IsDarkMode" Theme="ThemeService.Theme" />

    <CascadingValue Value="CookieService" IsFixed>
        <CascadingValue Value="Snackbar" IsFixed>
            @ChildContent
        </CascadingValue>
    </CascadingValue>
}